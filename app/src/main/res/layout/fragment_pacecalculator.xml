<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leaguespartan"
        android:text="Time (Hrs, Mins, Sec)"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/time_hrs_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:ems="10"
            android:fontFamily="@font/leaguespartan"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:fontFamily="@font/leaguespartan"
            android:gravity="center"
            android:text=":"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/time_min_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:ems="10"
            android:fontFamily="@font/leaguespartan"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:fontFamily="@font/leaguespartan"
            android:gravity="center"
            android:text=":"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/time_sec_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:ems="10"
            android:fontFamily="@font/leaguespartan"
            android:inputType="number" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leaguespartan"
        android:text="Distance"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/distance_amount_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:ems="10"
            android:fontFamily="@font/leaguespartan"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/distance_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leaguespartan"
        android:text="Pace (Hrs, Mins, Sec)"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/pace_hrs_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:ems="10"
            android:fontFamily="@font/leaguespartan"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:fontFamily="@font/leaguespartan"
            android:gravity="center"
            android:text=":"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/pace_min_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:ems="10"
            android:fontFamily="@font/leaguespartan"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:fontFamily="@font/leaguespartan"
            android:gravity="center"
            android:text=":"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/pace_sec_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:ems="10"
            android:fontFamily="@font/leaguespartan"
            android:inputType="number" />

        <Spinner
            android:id="@+id/pace_units_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45" />

    </LinearLayout>

    <TextView
        android:id="@+id/null_checker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/leaguespartan"
        android:textColor="#FF0000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/leaguespartan"
        android:text="Calculate" />

</LinearLayout>